{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES6",
    "jsx": "preserve",
    "importHelpers": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "pages/*": ["src/pages/*"],
      "boot/*": ["src/boot/*"],
      "stores/*": ["src/stores/*"],
      "ui/*": ["src/components/ui/*"],
      "composables/*": ["src/composables/*"],
      "types/*": ["src/types/*"],
      "utils/*": ["src/utils/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "*.config.js",
    "**/*.eslintrc.js"
  ],
  "exclude": ["node_modules", "dist", ".quasar"]
}
